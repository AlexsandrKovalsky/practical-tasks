def factorial(number1):
    result = "Некоректные данные"
    if number1 > 0:
        while number1 > 0:
            result *= number1
            number1 -= 1
    else:
        if number1 == 0:
            result = 1
    return result


def multiplication(number1, number2):
    return number1 * number2


def sum(number1, number2):
    return number1 + number2


def difference(number1, number2):
    return number1 - number2


def division(number1, number2):
    if number2 != 0:
        return number1 / number2
    else:
        return "Деление на 0 невозможно"


def power(number1):
    return number1 * number1


def calculate(number1, operation, number2=1):
    if operation == '!':
        return factorial(number1)
    if operation == '^':
        return power(number1)
    if operation == "+":
        return sum(number1, number2)
    if operation == "-":
        return difference(number1, number2)
    if operation == "*":
        return multiplication()
    if operation == "/":
        return division(number1, number2)


number1 = float(input("Введите первое число:"))
operation = input("Введите доступную операцию(!,^,+,-,*,/):")
if operation == "!" or operation == "^":
    print(calculate(number1, operation))
number2 = float(input("Введите второе число:"))
print(calculate(number1, operation, number2))
